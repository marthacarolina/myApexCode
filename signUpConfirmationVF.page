<!-- this page displays after a Benevon invitee submits a signup request to a
     Benevon POE. -->
<apex:page showHeader="false" standardStylesheets="false" sidebar="false" applyHtmlTag="false" applyBodyTag="false" docType="html-5.0">
    <html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" lang="en" />
    <head>
        <!-- Import the Design System style sheet -->
        <apex:slds />
    </head>
    <body>
        <div class="slds-scope">
            <div class="slds-box slds-theme_success">
                <div class="slds-text-heading_medium">
                    <p>You have been signed up for {!$CurrentPage.parameters.poe}</p>
                    <p>A confirmation email with details of the event will be sent to you shortly.</p>     
                </div>
            </div>
        </div>
    </body>
</apex:page>